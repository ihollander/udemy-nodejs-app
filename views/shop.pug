extends layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/product.css")

block content
  if hasProducts
    .grid
      each product in prods
        article.card.product-item
          header.card__header
            h1.product__title #{product.title}
          .card__image
            img(src="https://camo.githubusercontent.com/a43de8ca816e78b1c2666f7696f449b2eeddbeca/68747470733a2f2f63646e2e7261776769742e636f6d2f7075676a732f7075672d6c6f676f2f656563343336636565386664396431373236643738333963626539396431663639343639326330632f5356472f7075672d66696e616c2d6c6f676f2d5f2d636f6c6f75722d3132382e737667", alt="A Book")
          .card__content
            h2.product__price $19.99
            p.product__description A very interesting book about so many even more interesting things!
          .card__actions
            button.btn Add to Cart
  else
    h1 No Products